<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/activity_objects__toolbar"
        style="@style/Toolbar">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/activity_objects__toolbar_arrow_image_view"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/left_arrow"
                app:tint="#2c7cd4"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_main__categories"
                android:textColor="#2c7cd4"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ObjectsActivity"
        android:background="@color/black">

        <include layout="@layout/vertical_left_guideline"
            android:id="@+id/activity_objects__left_guideline"/>
        <include layout="@layout/vertical_right_guideline"
            android:id="@+id/activity_objects__right_guideline"/>


        <TextView
            android:id="@+id/activity_objects__objects_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_objects__objects"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="15pt"
            app:layout_constraintLeft_toLeftOf="@id/activity_objects__left_guideline"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/activity_objects__separator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/activity_objects__objects_text_view"
            app:layout_constraintLeft_toLeftOf="@id/activity_objects__left_guideline"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/separator"
            android:layout_marginTop="10dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/activity_objects__objects_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/activity_objects__separator"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
        </androidx.recyclerview.widget.RecyclerView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
