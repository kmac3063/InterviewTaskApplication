<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ObjectsActivity"
    android:background="@color/black">

    <include layout="@layout/vertical_left_guideline"
        android:id="@+id/activity_objects__left_guideline"/>
    <include layout="@layout/vertical_right_guideline"
        android:id="@+id/activity_objects__right_guideline"/>

    <TextView
        android:id="@+id/activity_objects__objects_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_objects__objects"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="13pt"
        app:layout_constraintLeft_toLeftOf="@id/activity_objects__left_guideline"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/activity_objects__separator"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/activity_objects__objects_text_view"
        app:layout_constraintLeft_toLeftOf="@id/activity_objects__left_guideline"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/separator"
        android:layout_marginTop="10dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activity_objects__objects_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/activity_objects__separator"
        app:layout_constraintBottom_toBottomOf="parent"
        >
    </androidx.recyclerview.widget.RecyclerView>
</androidx.constraintlayout.widget.ConstraintLayout>